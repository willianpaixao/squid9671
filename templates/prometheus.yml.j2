scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets:
          - "localhost:9090"
          - "{{ ansible_default_ipv4.address }}:9100"

  - job_name: "docker"
    static_configs:
      - targets: ["{{ ansible_default_ipv4.address }}:9323"]

  - job_name: "docker-containers"
    docker_sd_configs:
      - host: unix:///var/run/docker.sock
